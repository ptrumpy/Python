import random
words = ['apple', 'banana', 'fortune', 'school', 'minion']
chances = 7
word_choice = random.randint(0,len(words)-1)
#print (words[word_choice])
num_letters = len(words[word_choice])
#print(num_letters)
letters_in_word = []
for l in words[word_choice]:
  letters_in_word.append(l)
#print(letters_in_word)
#print('_ ' * num_letters)
guesses = ''
while chances > 0:
  guess = input("\nGuess a letter: ")
  guesses += guess
  if guess not in words[word_choice]:
      chances -=1
      print('Sorry, that letter is not in the word.')
      print('You have ' + str(chances) + ' chances remaining.')
      if chances == 0:
        print('Game Over')
  else:
    print('The letter ' + guess + ' is in the word.')
    print('You still have ' + str(chances) + ' chances remaining.')
  for char in words[word_choice]:
    if char in guesses:
      print (char + " ", end="")
    else:
      print ('_ ',end="")
    
